<resources>
    <!-- Base application theme. -->
    <style name="Theme.Sample" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/ModalBottomSheetDialog</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowSoftInputMode">adjustNothing</item>
    </style>
</resources>